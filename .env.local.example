# Development Environment Variables
# Copy this file to .env.local for local development

# Set to 'local' to use proxy and avoid CORS issues
NEXT_PUBLIC_APP_ENV=local

# Production API URL (used by proxy)
NEXT_PUBLIC_PRODUCTION_API_URL=https://be.tijarah360.com

# Enable development mode
NODE_ENV=development

# Optional: Override specific configurations for local development
# NEXT_PUBLIC_USE_PROXY=true
# NEXT_PUBLIC_DISABLE_CORS=true
